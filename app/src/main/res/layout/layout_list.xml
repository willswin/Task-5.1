<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/date_list_layout"
    android:padding="15dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2019"
        android:id="@+id/Date"
        android:layout_marginLeft="10dp"
        android:textSize="26sp"
        android:layout_marginRight="30dp"

        android:layout_marginTop="20dp"/>

    <TableRow
        android:id="@+id/TableRow01"
        android:layout_toRightOf="@id/Date"
        android:layout_marginLeft="-10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TableRise"

            android:gravity="center"
            android:padding="2sp"
            android:text="Sunrise"
            android:layout_marginLeft="5dp"
            android:textColor="#ffd700"
            android:textSize="24sp"/>
        <TextView
            android:padding="2sp"
            android:id="@+id/TableSet"
            android:gravity="center"
            android:textColor="#ff8400"
            android:textSize="24sp"
            android:layout_marginLeft="10dp"

            android:text="Sunset"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </TableRow>

    <TableRow android:id="@+id/TableRow02" android:layout_width="match_parent" android:layout_height="wrap_content"         android:layout_alignLeft="@id/TableRow01"
        android:layout_below="@id/TableRow01"
        >
        <TextView  android:layout_marginLeft="20dp" android:padding="2sp" android:textSize="24sp" android:text="00:00" android:textColor="#ffd700" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/sunriseTime" android:layout_width="wrap_content"></TextView>
        <TextView  android:layout_marginLeft="22dp" android:padding="2sp" android:textSize="24sp" android:text="00:00" android:textColor="#ff8400" android:gravity="center" android:layout_height="wrap_content" android:id="@+id/sunsetTime" android:layout_width="wrap_content"></TextView>
    </TableRow>

</RelativeLayout>